<view class="posfix">
  <view class="tab-top bgfff lh88 bt1 bd1">
    <view wx:for="{{ videoTab }}"
          wx:key="*7"
          catchtap="chooseIndex"
          data-index="{{ index }}"
          data-type="top"
          class="t-t-item f26 tac pr {{ currentIndex == index ? 'cff3b5b' : 'c666' }}">
      {{ item.t }}
    </view>
  </view>

  <view hidden="{{ currentIndex != 2 }}" class="tab-top bgfff lh88 bt1 bd1">
    <view wx:for="{{ teamOrder }}"
          wx:key="*71"
          catchtap="chooseIndex"
          data-type="team"
          data-index="{{ index }}"
          class="t-t-item f26 tac pr {{ currentIndexTwo == index ? 'cff3b5b' : 'c666' }}">
      {{ item }}
    </view>
  </view>
</view>

<view class="{{ currentIndex == 2 ? 'zw200' : 'zw90' }}"></view>

