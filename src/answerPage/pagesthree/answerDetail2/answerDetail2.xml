<view class="bgfff br18 p30">
  <view class="f26 fw7 c999 user-info">
    <image lazy-load="{{true}}" class="br" src="{{ info.avatar_url }}"></image>
    <view class="{{ info.is_teach == 1 ? 'teacher-tag' : '' }}">{{ info.nickname }}</view>
  </view>

  <view class="f36 c3a3a3a fw7 mt20">{{ info.context }}</view>

  <view class="answer-img mt10">
    <image lazy-load="{{true}}"
           wx:for="{{ info.images }}"
           wx:key="*21"
           data-index="{{ index }}"
           catchtap="showImg"
           mode="aspectFill"
           src="{{ item }}"></image>
  </view>

  <view class="f20 mt20 c666 info-time">
    <view>{{ info.create_time }}</view>
    <view catchtap="replyOperation" data-name="题主" data-id="{{ info.user_id }}" data-cindex="0.5" class="iconfont icon-pinglun"></view>
  </view>

  <view hidden="{{ commentArr.length <= 0 ? rIndex < 0 : false}}"
        class="reply pr mt20 br20 f26 c393636 p30">
    <view catchtap="replyOperation"
          data-type="other"
          class="mt10 f26 answer-reply-item"
          data-cindex="{{ index }}"
          data-name="{{ nItem.reply_nickname }}"
          data-id="{{ nItem.user_id }}"
          data-teach="{{ nItem.reply_is_teach }}"
          wx:for='{{ commentArr }}'
          wx:for-item="nItem"
          wx:key="*908">
      <text class="reply-name fw7">
        <text class="{{ nItem.reply_is_teach == 1 ? 'teacher-tag' : '' }}">{{ nItem.reply_nickname }}</text>
      </text>
      <text wx:if="{{ nItem.receiver_user_id > 0 }}">
        <text>回复</text>
        <text class="reply-name fw7">
          <text class="{{ nItem.answer_nickname ? nItem.answer_is_teach == 1 ? 'teacher-tag' :  '' : '' }}">{{ nItem.answer_nickname || '题主'}}</text>
        </text>
      </text>
      <text>：{{ nItem.comment }}</text>
    </view>
    <view wx:if="{{ rIndex >= 0 }}"
          class="reply-input-area">
      <view>
        回复<text class="main-text-color {{ answer_is_teach == 1 ? 'teacher-tag' : '' }}">{{ replyName }}</text>:
      </view>
      <input cursor-spacing="40"
             focus="{{ replyFocus }}"
             confirm-type="send"
             bindconfirm="replyConfirm"
             bindblur="replyBlur"
             placeholder="请输入内容" />
    </view>
    <view wx:if="{{ more == 1 }}"
          catchtap="getMoreNext"
          class="tac f24 c999 mt10">查看更多回答</view>
  </view>
</view>