<form>
  <swiper class="goods-swiper" current="{{ current }}">
    <swiper-item wx:if="{{ info.video_url && info.video_url.length > 5 }}">
      <!--<video catchtouchstart="videotouchstart" catchtouchend="videotouchend" enable-progress-gesture="{{ enable_progress_gesture }}" autoplay="1" style="width: 100%; height: 100%;" object-fit="cover" src="{{ info.video_url }}">-->
      <video autoplay="1" style="width: 100%; height: 100%;" object-fit="contain" src="{{ info.video_url }}">
      </video>
    </swiper-item>
    <swiper-item wx:for="{{ info.sku[labelIndex].img }}" wx:key="*112">
      <image mode="aspectFill" src="{{ item }}"></image>
    </swiper-item>
    <swiper-item wx:for="{{ info.imgs.length >= 1 ? info.imgs : [info.img] }}" wx:key="*113">
      <image mode="aspectFill" src="{{ item }}"></image>
    </swiper-item>
  </swiper>
  <button wx:if="{{ !ping }}"
          open-type="share"
          hover-class="none"
          class="p30 goods-title tal">
    <view class="f34 c3a3a3a fw7">{{ info.title }}</view>
    <view class="goods-bottom mt10">
      <view class="g-b-t">
        <view class="cff5975 f48 fw7">¥{{ info.old_price }}</view>
        <!--<view class="f26 c666 ml10">赚¥{{ info.level_one }}</view>-->
      </view>
      <view class="f28 fw7 cff5975">分享赚</view>
    </view>
  </button>
  <view wx:if="{{ !ping }}" class="goods-count f26 c3a3a3a p030">
    <view>运费 ¥{{ info.freight }}</view>
    <view>库存 {{ info.stock }}</view>
    <view>销量 {{ info.count_sale }}</view>
  </view>

  <!--拼团内容sss-->
  <view wx:if="{{ ping }}" class="ping-title">
    <view class="p2030 ping-t-w">
      <view class="ping-t-t cfff df">
        <view><text class="f45">￥</text><text class="f58">{{ info.pin_show_price[0] }}</text><text class="f53">.</text><text class="f53">{{ info.pin_show_price[1] || '00' }}</text></view>
        <view class="f23 ping-people">
          <text class="pp-n">{{ info.group_num || '未知' }}</text>
          <text class="pp-t">人拼</text>
        </view>
        <view class="f30 flex1 tar">已拼{{ info.count_sale }}件</view>
      </view>
      <view class="text-t f28">￥{{ info.sku[0].alone_price }}</view>
    </view>
    <view class="f34 c3e3a39 pttt fw7">{{ info.title }}</view>
  </view>

  <view wx:if="{{ ping && group.length }}" class="pb20">
      <view class="arrow">
        <view class="f30 c3e3a39">直接参与可快速成团</view>
        <view catchtap="showMorePing" class="f24 c828282">查看更多</view>
      </view>
    <block wx:for="{{ group }}" wx:key="*thiss">
      <view class="ping-team df">
        <image mode="aspectFill" class="br" src="{{ item.user[0].avatar_url }}"></image>
        <view class="pteam-phone f31 c000">{{ item.user[0].phone }}</view>
        <view class="df pteam-time f30 c000 tar flex1">
          <view>还差{{ info.group_num - item.user.length }}人成团</view>
          <view class="f28 c828282">距结束{{ item.h }}:{{ item.m }}:{{ item.s }} </view>
        </view>
        <view wx:if="{{ item.status == 1 }}" catchtap="sptChange" data-type="open" data-index="{{ index }}" class="f30 cfff pteam-btn">立即拼单</view>
        <view wx:else class="f30 cfff pteam-btn">拼单结束</view>
      </view>
    </block>
  </view>


  <!--拼团内容eee-->

  <view wx:if="{{ !ping }}" class="f34 c444 p30">商品详情</view>
  <view style="white-space:pre-wrap;">{{ info.detail_text }}</view>
  <image wx:for="{{ info.detail }}"
         wx:key="*12123"
         lazy-load="1"
         data-index="{{ index }}"
         catchtap="showImg"
         mode="widthFix"
         class="detail-img"
         src="{{ item }}"></image>
  <view class="{{ ping ? 'zw120' : 'zw90' }}"></view>
  <view wx:if="{{ all_Screen }}" class="zw40"></view>
  <view wx:if="{{ !options.type }}" class="bottom-tab {{ ping ? 'bottom-tab-ping' : '' }} {{ all_Screen ? 'all-screen' : '' }}">
    <navigator url="/shopPage/shoppages/index/index"
               hover-stop-propagation="{{true}}"
               hover-class="none"
               class="{{ systemVersion ? '' : 'jwqfont' }} jwq-dianpu f22 {{ ping ? 'ff3b5b' : '' }}"
               open-type="reLaunch">
      <image wx:if="{{ systemVersion }}" style='width: 40rpx; height: 40rpx;display:inline-block;' src="https://teach-1258261086.cos.ap-guangzhou.myqcloud.com/image/admin/icon/shop.png"></image>
      {{ ping ? '商城' : '' }}
    </navigator>
    <view wx:if="{{ !ping }}" catchtap="buy" data-type="car" class="addcar flex1 tac c444 f34 fw7">加入购物车</view>
    <view wx:if="{{ !ping }}" catchtap="buy" data-type="buy" class="buynow flex1 tac cfff f34 fw7">立刻购买</view>

    <view wx:if="{{ ping }}" class="br20 f30 ping-btn cfff df flex11">
      <view catchtap="buy" data-type="buy" class="tac ping-btn-single flex11">
        <view>￥{{ info.sku[labelIndex].alone_price }}</view>
        <view>单独购买</view>
      </view>
      <view catchtap="buy" data-type="ping" class="tac ping-btn-team flex11">
        <view>￥{{ info.sku[labelIndex].assemble_price }}</view>
        <view>发起拼单</view>
      </view>
    </view>
  </view>
  <!--商品规格选择-->
  <view class="goods-mask {{ buyMask ? '' : 'noshow' }}"
        catchtap="buy"
        data-type="change">
    <!--商品展示-->
    <view catchtap="noUse"
          class="g-m-wrap bgfff {{ all_Screen ? 'all-screen' : '' }}">
      <view class="g-m-top p30 bd1 pr">
        <image mode="aspectFill"
               class="br8 {{ buyMask ? '' : 'noshow' }}"
               src="{{ info.sku[labelIndex].img[0] || info.img }}"></image>
        <view class="c444 f26">
          <view class="cff5975 f34">
            <!--<text>¥{{ info.sku[labelIndex].discount }}</text>-->
            <!--<text wx:if="{{ discount_name.length >= 1 }}" class="c999 text-t f22 pl20">¥{{ info.sku[labelIndex].price }}</text>-->
            <text>¥{{ info.sku[labelIndex][ping ? buy_type == 'ping' ? 'assemble_price' : 'alone_price' : 'price'] }}</text>
          </view>
          <view>库存：{{ info.sku[labelIndex].stock }}</view>
          <view wx:if="{{ info.label != '-1' }}">请选择：{{ info.label }}</view>
          <!--<view wx:if="{{ discount_name.length >= 1 }}" class="cff5975 f22">{{ discount_name }}</view>-->
        </view>
        <view catchtap="buy"
              data-type="change"
              class="close iconfont icon-cuowu"></view>
      </view>
      <!--规格设置-->
      <scroll-view wx:if="{{ info.label != '-1' }}" scroll-y style="max-height: 700rpx;">
        <!--<view class="p30 bd1 f30 c444 g-m-specification fw7"-->
              <!--wx:key="*98"-->
              <!--wx:for-index="oindex"-->
              <!--wx:for="1">-->
        <view class="p30 bd1 f30 c444 g-m-specification fw7">
          <view class="gms-t">{{ info.label }}</view>
          <view class="gms-c">
            <!--<view wx:for="{{ info.sku }}"-->
                  <!--wx:for-index="iindex"-->
                  <!--catchtap="chooseSp"-->
                  <!--data-index="{{ iindex }}"-->
                  <!--data-oindex="{{ oindex }}"-->
                  <!--class="gms-c-item {{ item.choose ? 'choose' : '' }}"-->
                  <!--wx:key="*15">{{ item.value }}</view>-->
            <view wx:for="{{ info.sku }}"
                  catchtap="chooseSp"
                  data-index="{{ index }}"
                  class="gms-c-item {{ labelIndex == index ? 'choose' : '' }}"
                  wx:key="*15">{{ item.value }}</view>
          </view>
        </view>
      </scroll-view>
      <!--购买数量-->
      <view class="g-m-count f30 c444 bd1 p30">
        <view class="fw7">购买数量</view>
        <view class="gmc-num">
          <view catchtap="numOperation" data-type="del" class="gmcn-del br8">-</view>
          <input type="number"
                 disabled="{{true}}"
                 catchinput="inputValue"
                 class="br8 gmcn-in"
                 value="{{ num }}" />
          <view catchtap="numOperation" data-type="add" class="gmcn-add br8">+</view>
        </view>
      </view>
      <view catchtap="goSubmit" class="g-m-confirm f34 cfff fw7 tac">
        确定
      </view>
    </view>
  </view>
</form>

<!--拼单 ssssss-->
<view wx:if="{{ showPingTeam }}" class="mask">
  <view class="spt-in tac br18 p30 bgfff">
    <view catchtap="sptChange" data-type="close" class="iconfont icon-cuowu"></view>
    <view class="f32 c3e3a39">参与{{ group[showPingIndex].user[0].nickname }}的拼单</view>
    <view class="f24 mt20">仅差<text class="cff362c">{{ info.group_num - group[showPingIndex].user.length }}人</text>，快呼唤小伙伴参加吧！</view>
    <view class="spt-user mt20">
      <view class="user-item pr">
        <view class="pa cfff f27 team-leader keep">团长</view>
        <image class="br" mode="aspectFil" src="{{ group[showPingIndex].user[0].avatar_url}}"></image>
      </view>
      <view wx:for="{{ group[showPingIndex].user }}" wx:if="{{ index < 2 }}" wx:key="*26" class="user-item">
        <image wx:if="{{ index >= 1 }}" class="br" mode="aspectFil" src="{{ item.avatar_url }}"></image>
      </view>
      <view class="user-item">
        <image class="br" mode="aspectFil" src="https://teach-1258261086.cos.ap-guangzhou.myqcloud.com/ping/ping3.png"></image>
      </view>
    </view>
    <view catchtap="buy" data-type="join" class="spt-other">参与拼单</view>
  </view>
</view>
