<view class="pr user-top">
  <view class="bg-img"></view>
  <button open-type="getUserInfo" bindgetuserinfo="getUserInfoBtn" class="user-info pa">
    <image lazy-load="{{true}}" class="user-img br" src="{{ userInfo.avatar_url }}"></image>
    <view class="f26 cfff user-name">
      <view class="fw7">{{ userInfo.nickname }}</view>
      <view class="f20 mt10">学号：{{ userInfo.id }}</view>
    </view>
  </button>
</view>

<view class="user-operation p20">
  <view class="bgfff br18 p20">
    <navigator url="{{ item.url }}"
               hover-class="none"
               class="user-o-item f26 c444 mt20"
               wx:key="*101"
               wx:for="{{ operationArr }}">
      <image lazy-load="{{true}}"
             mode="widthFix"
             src="{{ item.src }}"></image>
      <view class="mt10">{{ item.t }}</view>
    </navigator>
  </view>
  <navigator hover-class="none"
             url="/storePage/pagesstore/index/index"
             class="arrow f28 c444 p30 br18 bb bgfff mt20">我的门店</navigator>
</view>

<view class="zw"></view>
<my-navigator-tab></my-navigator-tab>
<!--错误弹窗-->
<import src="../template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>
