.goods-top {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.goods-top view {
  text-align: center;
}
.release {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.release .r-item {
  text-align: center;
  padding: 24rpx 0;
  border-radius: 8rpx;
  background-color: #fff;
  flex: 0 0 48%;
}
.release .r-item:nth-child(1) {
  background-color: #ff3b5b;
  color: #fff;
}
.godds-swiper {
  height: 240rpx;
}
.godds-swiper image {
  width: 100%;
  height: 100%;
}
.goods-wrap {
  width: 100%;
  height: 86rpx;
  margin-top: -30rpx;
}
.goods-wrap .new-wrap-container {
  display: flex;
  flex-wrap: nowrap;
}
.goods-wrap .goods-label {
  display: inline-block;
  padding: 0 15rpx;
  line-height: 84rpx;
  word-break: keep-all;
  overflow: visible;
}
.goods-wrap .goods-label:nth-child(1) {
  padding-left: 30rpx;
}
.goods-list {
  display: flex;
  min-height: 180rpx;
}
.goods-list image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.goods-list .flex1 {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-list .goods-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods-list .goods-operation text:nth-child(2) {
  color: #ff5975;
}
.not-agents {
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  width: 100%;
  height: 100%;
}
.not-agents button {
  width: 100%;
  height: 100%;
  text-align: center;
  padding: 80rpx;
}
