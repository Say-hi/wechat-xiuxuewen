<form>
  <swiper class="goods-swiper" autoplay="{{true}}">
    <swiper-item wx:for="{{ info.imgs.length >= 1 ? info.imgs : [info.img] }}" wx:key="*112">
      <image mode="aspectFill" src="{{ item }}"></image>
    </swiper-item>
  </swiper>
  <button open-type="share"
          hover-class="none"
          class="p30 goods-title tal">
    <view class="f34 c3a3a3a fw7">{{ info.title }}</view>
    <view class="goods-bottom mt10">
      <view class="g-b-t">
        <view class="cff5975 f48 fw7">¥{{ info.old_price }}</view><view class="f26 c666 ml10">赚¥{{ info.level_one }}</view>
      </view>
      <view class="f28 fw7 cff5975">分享赚</view>
    </view>
  </button>
  <view class="goods-count f26 c3a3a3a p030">
    <view>运费 ¥{{ info.freight }}</view>
    <view>库存 {{ info.stock }}</view>
    <view>销量 {{ info.count_sale }}</view>
  </view>
  <view class="f34 c444 p30">商品详情</view>
  <view>{{ info.detail_text }}</view>
  <image wx:for="{{ info.detail }}"
         wx:key="*12"
         mode="widthFix"
         class="detail-img"
         src="{{ item }}"></image>
  <view class="zw90"></view>
  <view class="bottom-tab">
    <navigator url="/shopPage/shoppages/index/index"
               hover-stop-propagation="{{true}}"
               hover-class="none"
               class="jwqfont jwq-dianpu"
               open-type="reLaunch"></navigator>
    <view catchtap="buy" data-type="car" class="addcar flex1 tac c444 f34 fw7">加入购物车</view>
    <view catchtap="buy" data-type="buy" class="buynow flex1 tac cfff f34 fw7">立刻购买</view>
  </view>
  <!--商品规格选择-->
  <view class="goods-mask {{ buyMask ? '' : 'noshow' }}"
        catchtap="buy"
        data-type="change">
    <!--商品展示-->
    <view catchtap="noUse"
          class="g-m-wrap bgfff">
      <view class="g-m-top p30 bd1 pr">
        <image mode="aspectFill"
               class="br8"
               src="{{ info.img }}"></image>
        <view class="c444 f26">
          <view class="cff5975 f34">¥{{ info.sku[labelIndex].price }}</view>
          <view>库存：{{ info.sku[labelIndex].stock }}</view>
          <view>请选择：{{ info.label }}</view>
        </view>
        <view catchtap="buy"
              data-type="change"
              class="close iconfont icon-cuowu"></view>
      </view>
      <!--规格设置-->
      <scroll-view scroll-y style="max-height: 700rpx;">
        <!--<view class="p30 bd1 f30 c444 g-m-specification fw7"-->
              <!--wx:key="*98"-->
              <!--wx:for-index="oindex"-->
              <!--wx:for="1">-->
        <view class="p30 bd1 f30 c444 g-m-specification fw7">
          <view class="gms-t">{{ info.label }}</view>
          <view class="gms-c">
            <!--<view wx:for="{{ info.sku }}"-->
                  <!--wx:for-index="iindex"-->
                  <!--catchtap="chooseSp"-->
                  <!--data-index="{{ iindex }}"-->
                  <!--data-oindex="{{ oindex }}"-->
                  <!--class="gms-c-item {{ item.choose ? 'choose' : '' }}"-->
                  <!--wx:key="*15">{{ item.value }}</view>-->
            <view wx:for="{{ info.sku }}"
                  catchtap="chooseSp"
                  data-index="{{ index }}"
                  class="gms-c-item {{ labelIndex == index ? 'choose' : '' }}"
                  wx:key="*15">{{ item.value }}</view>
          </view>
        </view>
      </scroll-view>
      <!--购买数量-->
      <view class="g-m-count f30 c444 bd1 p30">
        <view class="fw7">购买数量</view>
        <view class="gmc-num">
          <view catchtap="numOperation" data-type="del" class="gmcn-del br8">-</view>
          <input type="number"
                 disabled="{{true}}"
                 catchinput="inputValue"
                 class="br8 gmcn-in"
                 value="{{ num }}" />
          <view catchtap="numOperation" data-type="add" class="gmcn-add br8">+</view>
        </view>
      </view>
      <view catchtap="goSubmit" class="g-m-confirm f34 cfff fw7 tac">
        确定
      </view>
    </view>
  </view>
</form>
<!--错误弹窗-->
<import src="/template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>
