page {
  background-color: #fff;
}
.goods-swiper {
  height: 694rpx;
}
.goods-swiper image {
  width: 100%;
  height: 100%;
}
.goods-title {
  padding-top: 20rpx;
}
.goods-title .goods-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods-title .goods-bottom .g-b-t view {
  display: inline-block;
}
.goods-count {
  background-color: #f1f1f1;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detail-img {
  width: 100%;
}
.bottom-tab {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.bottom-tab .jwq-dianpu {
  width: 140rpx;
  text-align: center;
}
.bottom-tab .jwq-dianpu:before {
  font-size: 40rpx;
}
.bottom-tab .flex1 {
  height: 100%;
  line-height: 88rpx;
}
.bottom-tab .addcar {
  border-left: 2rpx solid #eee;
}
.bottom-tab .buynow {
  background-color: #ff5975;
  border-bottom-right-radius: 8rpx;
  border-top-right-radius: 8rpx;
}
.goods-mask {
  background-color: rgba(0, 0, 0, 0.5);
  transition: all 0.5s;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.goods-mask.noshow {
  width: 100%;
  height: 0;
  overflow: hidden;
}
.g-m-wrap {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  transition: all .5s;
}
.g-m-wrap .g-m-top {
  display: flex;
}
.g-m-wrap .g-m-top image {
  width: 160rpx;
  height: 160rpx;
  margin-top: -60rpx;
  margin-right: 20rpx;
  transition: all 0.7s;
}
.g-m-wrap .g-m-top image.noshow {
  width: 0;
  height: 0;
  border-radius: 50%;
}
.g-m-wrap .g-m-top .close {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 60rpx;
  color: #444;
}
.g-m-wrap .g-m-specification {
  padding-left: 15rpx;
}
.g-m-wrap .g-m-specification .gms-t {
  padding-left: 15rpx;
}
.g-m-wrap .g-m-specification .gms-c {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.g-m-wrap .g-m-specification .gms-c-item {
  padding: 4rpx 25rpx;
  border: 2rpx solid #979797;
  border-radius: 37rpx;
  margin: 20rpx 15rpx;
  margin-bottom: 0;
  transition: all .5s;
}
.g-m-wrap .g-m-specification .gms-c-item.choose {
  color: #fff;
  background-color: #ff5797;
  border-color: #ff5797;
}
.g-m-wrap .g-m-count {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.g-m-wrap .g-m-count .gmc-num {
  display: flex;
  align-items: center;
}
.g-m-wrap .g-m-count .gmcn-in {
  height: 60rpx;
  line-height: 60rpx;
  width: 100rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border: 1rpx solid #444;
  display: inline-block;
}
.g-m-wrap .g-m-count .gmcn-del,
.g-m-wrap .g-m-count .gmcn-add {
  background-color: #ff5975;
  width: 60rpx;
  height: 60rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  font-size: 50rpx;
  margin: 0 10rpx;
}
.g-m-wrap .g-m-confirm {
  line-height: 88rpx;
  background-color: #ff5975;
  border-radius: 88rpx;
  margin: 10rpx 30rpx;
}
