<form>
<view class="p20">
  <view class="bgfff br8 p30 shop-info">
    <image src="{{ img }}"
           class="br img"
           mode="aspectFill" ></image>
    <view class="c444 f34 fw7 flex1 pl20">纹绣殿堂的店铺</view>
    <button open-type="share" class="iconfont icon-fenxiang c999"></button>
  </view>
  <view class="search">
    <view class="s-wrap">
      <view class="iconfont f32 icon-sousuo c999"></view>
      <input confirm-type="search" bindconfirm="search" cursor="30" placeholder-class="holder" class="br15 f28" placeholder="输入您要搜索的内容" />
    </view>
    <navigator open-type="navigateBack" class="f28 fw7 c444 cancel">搜索</navigator>
  </view>
  <!--视频区域-->
  <view class="container bgfff br8 new p30">
    <navigator hover-class="none" url="/shopVideoPage/shopvideopages/video/video" class="c-top">
      <view class="c-t-l f36 c444 fw7">操作视频</view>
      <view class="c-t-r f26 c444 ">查看更多</view>
    </navigator>
  </view>
  <view class="br8 scroll-c bgfff">
    <scroll-view scroll-x="{{true}}" class="new-wrap">
      <view class="new-wrap-container">
        <view hover-class="none"
                   url=""
                   class="c-w-item bb"
                   wx:for="{{ list }}"
                   wx:key="*1">
          <!--<view catchtap="collect" data-id="{{ item.id }}" class="c-w-i-collect pa f22 p10">收藏</view>-->
          <button form-type="submit"
                  hover-class="none"
                  catchtap="playVideo"
                  data-index="{{ index }}">
            <image lazy-load="{{true}}"
                   class="br8"
                   mode="aspectFill"
                   src="{{ item.image }}"></image>
            <view class="ell1 f24 c444 fw7 mt10 tal">{{ item.title }}</view>
          </button>
        </view>
      </view>
    </scroll-view>
  </view>
<!--商品列表-->
  <view class="container bgfff br8 new p30">
    <navigator hover-class="none"
               url="/shopListPage/shoplistpages/list/list"
               class="c-top">
      <view class="c-t-l f36 c444 fw7">商品列表</view>
      <view class="c-t-r f26 c444 ">查看更多</view>
    </navigator>
  </view>
  <scroll-view scroll-x="{{true}}"
               class="goods-wrap bd1 bt1 bgfff">
    <view class="new-wrap-container">
      <button wx:for="{{ goodslabel }}"
              wx:key="*123"
              form-type="submit"
              class="f26 c666 goods-label flex1"
              hover-class="none">
        {{ item }}
      </button>
    </view>
  </scroll-view>
  <navigator url="/shopListPage/shoplistpages/detail/detail?id={{ item.id }}"
             hover-class="none"
             class="goods-list bd1 bgfff p30"
             wx:key="*011"
             wx:for="123123">
    <image mode="aspectFill"
           class="br8"
           src="{{ img }}"></image>
    <view class="flex1">
      <view class="f30 c444">我是商品标题，我总共有三行，我是商品标题</view>
      <view class="f38 c444 fw7 mt20">¥88.00</view>
      <button open-type="share"
              hover-class="none"
              catchtap="noUse"
              class="goods-bottom">
        <view class="cff3b5b f26">赚¥8.80</view>
        <view class="f28 fw7 cff5975">分享赚</view>
      </button>
    </view>
  </navigator>
</view>
</form>
<navigator open-type="reLaunch" url="/pages/index/index" class="bgfff goback c444 f28 {{ move ? 'move' : 'moveother' }}">绣学问</navigator>
<view class="mask video-mask" wx:if="{{ play }}">
  <video autoplay="{{ play }}"
         object-fit="contain"
         src="{{ list[playIndex].video_url || videoSrc }}"></video>
  <view catchtap="playVideo"
        data-index="-1"
        class="iconfont icon-cuowu"></view>
</view>
<view class="zw"></view>
<my-navigator-tab></my-navigator-tab>
<!--错误弹窗-->
<import src="/template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>
