<view class="login-mask" wx:if="{{ show }}">
    <button class="login-btn" open-type="getUserInfo" bindgetuserinfo="MaskGetUserInfo">
        <image lazy-load="{{true}}" class="login-bg" src="{{ login_bg }}"></image>
        <view class="login-box">
            <view class="login-tt view-item">
                请您授权该小程序获取您的信息,点击此处进行授权
            </view>
            <view class="login-tb view-item">
                点击确认授权
            </view>
        </view>
    </button>
</view>