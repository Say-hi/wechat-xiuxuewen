.tab-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.tab-top .t-t-item {
  padding-bottom: 4rpx;
  transition: all .5s;
}
.tab-top .t-t-item:after {
  content: '';
  position: absolute;
  bottom: 14rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  background-color: #fff;
  transition: all .5s;
}
.tab-top .cff3b5b:after {
  height: 4rpx;
  width: 100%;
  background-color: #fff;
}
.hot-wrap {
  display: flex;
  align-items: center;
  min-height: 202rpx;
}
.hot-wrap .h-w-left {
  height: 202rpx;
  width: 260rpx;
  margin-right: 30rpx;
}
.hot-wrap .h-w-left:before {
  content: attr(data-content);
  position: absolute;
  top: 20rpx;
  left: 0;
  color: #fff;
  font-size: 20rpx;
  font-weight: 700;
  background: #FF3B5B;
  opacity: 0.9;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  padding: 6rpx 20rpx;
}
.hot-wrap .h-w-right {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  height: inherit;
  min-height: 150rpx;
}
.hot-wrap .h-w-right .tag {
  display: inline-block;
  border: 2rpx solid #D3ABF7;
  padding: 2rpx 10rpx;
  margin-right: 14rpx;
  margin-top: 10rpx;
  color: #D3ABF7;
}
.hot-wrap .h-w-r-bottom {
  display: flex;
  align-items: center;
}
.hot-wrap .shop {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.hot-wrap .shop image {
  width: 30rpx;
  height: 30rpx;
}
.hot-wrap .shop .shop-info {
  display: flex;
  align-items: center;
}
.hot-wrap .shop .shop-info .shop-name {
  display: flex;
}
.hot-wrap .shop .shop-info .shop-name text {
  margin-right: 20rpx;
}
.hot-wrap .shop .shop-info .shop-name navigator {
  margin-top: 10rpx;
}
.hot-wrap .shop .shop-info image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.other {
  padding-right: 30rpx;
}
.go-shop {
  padding: 14rpx 30rpx;
  background-color: #ff3b5b;
  border-radius: 50rpx;
  display: inline-block;
}
.video .hot-wrap {
  min-height: 142rpx;
}
.video .h-w-left {
  height: 142rpx !important;
}
.room-wrap .room {
  display: flex;
}
.room-wrap .room .room-left {
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}
.room-wrap .room .room-left image {
  width: 100rpx;
  height: 100rpx;
}
.room-wrap .room .room-right {
  flex: 1;
}
.room-wrap .room .room-right .room-people {
  display: flex;
  justify-content: space-between;
}
.room-wrap .room .room-right .room-img image {
  transition: all 0.5s;
  width: 170rpx;
  padding: 0;
  height: 170rpx;
  margin: 5rpx 5rpx 0 0;
}
.room-wrap .room .room-right .room-img .hideHeight {
  height: 0;
  margin: 0;
  width: 0;
}
.room-wrap .room .nav {
  margin-top: 20rpx;
  padding: 6rpx 24rpx;
  border: 2rpx solid #ff3a5a;
  border-radius: 50rpx;
  display: inline-block;
  font-size: 28rpx;
}
.room-wrap .room .room-tag {
  color: #444;
  border-color: #444;
  margin-right: 20rpx;
  padding: 6rpx 18rpx;
}
.answer .answer-img {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.answer .answer-img image {
  width: 120rpx;
  height: 120rpx;
  margin: 10rpx;
  margin-left: 0;
  margin-right: 20rpx;
  border-radius: 18rpx;
}
.answer .h-i-user {
  display: flex;
  align-items: center;
}
.answer .h-i-user .user-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.answer .h-i-user .user-operation {
  flex: 1;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.answer .h-i-user .user-operation .iconfont {
  font-size: 20rpx;
  display: flex;
  align-items: center;
}
.answer .h-i-user .user-operation .iconfont:before {
  font-size: 26rpx;
  margin-right: 10rpx;
}
