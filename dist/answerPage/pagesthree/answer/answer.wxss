page {
  background-color: #eee;
}
.answer-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.ask-right {
  background-color: #ff3b5b;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  top: 140rpx;
  right: 20rpx;
  text-align: center;
  word-break: break-all;
}
.answer-wrap {
  padding: 0 20rpx 20rpx;
}
.search {
  display: flex;
  align-items: center;
  overflow: hidden;
}
.search .input-wrap {
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx;
  height: 100%;
  border-radius: 60rpx;
  background-color: #efefef;
  flex: 1;
}
.search .search-input {
  margin-left: 10rpx;
  border: none;
  width: 100%;
  height: 100% !important;
}
.search .search-input:after,
.search .search-input:before {
  border: none;
}
.search .ask {
  margin-left: 20rpx;
  background-color: #ff3b5b;
  padding: 0rpx 40rpx;
  height: 100%;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
}
.tab-top {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.tab-top .t-t-item {
  padding-bottom: 4rpx;
  transition: all .2s;
}
.tab-top .t-t-item:after {
  content: '';
  position: absolute;
  bottom: 14rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  background-color: #fff;
  transition: all .2s;
}
.tab-top .cff3b5b:after {
  height: 4rpx;
  width: 100%;
  background-color: #fff;
}
.tab-top .showCircle {
  position: relative;
}
.tab-top .showCircle:before {
  content: 'Â·';
  position: absolute;
  top: -20%;
  left: 96%;
  color: #ff3b5b;
  font-weight: 700;
  font-size: 60rpx;
}
.answer-img {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.answer-img image {
  width: 120rpx;
  height: 120rpx;
  margin: 10rpx;
  margin-left: 0;
  margin-right: 20rpx;
  border-radius: 18rpx;
}
.h-i-user {
  display: flex;
  align-items: center;
}
.h-i-user .user-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.h-i-user .user-operation {
  flex: 1;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.h-i-user .user-operation .iconfont {
  font-size: 20rpx;
  display: flex;
  align-items: center;
}
.h-i-user .user-operation .iconfont:before {
  font-size: 26rpx;
  margin-right: 10rpx;
}
.has-reply {
  overflow: hidden;
}
.has-reply:before {
  content: '';
  height: 100%;
  width: 10rpx;
  background-color: #ff3b5b;
  position: absolute;
  top: 0;
  left: 0;
}
