.posfix {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.tab-top {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.tab-top .t-t-item {
  padding-bottom: 4rpx;
  transition: all .5s;
}
.tab-top .t-t-item:after {
  content: '';
  position: absolute;
  bottom: 14rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  background-color: #fff;
  transition: all .5s;
}
.tab-top .cff3b5b:after {
  height: 4rpx;
  width: 100%;
  background-color: #fff;
}
.no-top-20 {
  padding-top: 0 !important;
}
.container .c-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container .order-time {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.hot-wrap {
  display: flex;
  align-items: center;
}
.hot-wrap .h-w-left {
  height: 142rpx;
  width: 260rpx;
  margin-right: 20rpx;
}
.hot-wrap .h-w-left:before {
  content: attr(data-content);
  position: absolute;
  top: 20rpx;
  left: 0;
  color: #fff;
  font-size: 20rpx;
  font-weight: 700;
  background: #FF3B5B;
  opacity: 0.9;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  padding: 6rpx 20rpx;
}
.hot-wrap .h-w-right {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  min-height: 142rpx;
}
.hot-wrap .h-w-right .name-money {
  display: flex;
  justify-content: space-between;
}
.hot-wrap .h-w-r-bottom {
  display: flex;
  align-items: center;
}
.hot-wrap .h-w-r-bottom image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.order-num {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order-operation {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex-wrap: wrap;
}
.order-operation view {
  border: 2rpx solid #666;
  border-radius: 60rpx;
  padding: 12rpx 28rpx;
  text-align: center;
  margin-left: 20rpx;
}
.order-operation .pay {
  background: #ff3b5b;
  border-color: #ff3b5b;
}
.order-operation .del {
  border-color: #fff;
}
button {
  border: 2rpx solid #444;
  border-radius: 60rpx;
  padding: 12rpx 28rpx;
  text-align: center;
  margin-left: 20rpx;
  font-size: 26rpx;
}
.width202 {
  width: 240rpx;
  word-break: break-all;
}
.mask-scroll {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.mask {
  transition: all 0.5s;
  overflow: hidden;
}
.small {
  width: 100%;
  height: 0;
}
.big {
  width: 100%;
  height: 100%;
}
.icon-quxiao {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translate(-50%, 0);
}
.icon-quxiao:before {
  font-size: 60rpx;
}
