<form>
  <view wx:if="{{ list.length <= 0 }}" class="no-goods bt1">
    您还没有相关的产品咧
  </view>
  <view wx:if="{{ tabIndex >= 1 }}" class="f28 c666 tab bgfff bt1">
    <view catchtap="tabChoose" data-index="1" class="tac flex1 {{ tabIndex == 1 ? 'active' : '' }}">全部</view>
    <view catchtap="tabChoose" data-index="2" class="tac flex1 {{ tabIndex == 2 ? 'active' : '' }}">售完下架</view>
  </view>
  <view class="f26 p30 c666 bt1 bgfff">商品默认按序号降序排序，序号相同按发布时间排序</view>
  <view class="p20">
    <block wx:for="{{ list }}"
           wx:key="*07">
      <view class="f22 c3a3a3a tac mt10">10月20日 17:28</view>
      <view class="car-list p20 bgfff mt20">
        <view catchtap="choose"
              data-index="{{ index }}"
              class="iconfont f26 {{ item.choose ? 'icon-gouxuan' : 'icon-wxz' }}">　发布时间：2019.01.07 10:26:35</view>
        <view class="p20 br8 mt20 goods-info">
          <image src="{{ img }}"
                 class="br8 mr20"
                 mode="aspectFill"></image>
          <view class="f26 c444">
            <text class="fw7">我是商品标题，我是商品标题</text>
            <text class="c666">商品编号：16686868</text>
          </view>
        </view>
        <view class="f26 c444 fw7 bd1 goods-count">
          <text>¥200.00元</text>
          <text>库存：4888</text>
          <text>销量：88</text>
        </view>
        <view class="goods-op">
          <button>删除</button>
          <button catchtap="goEdit" data-index="{{ index }}">编辑</button>
          <button>上架</button>
        </view>
      </view>
    </block>
  </view>
  <view class="zw"></view>
  <view class="bgfff submit bt1 f24 c444 p2030">
    <view catchtap="checkAll"
          data-index="{{ selectAll }}"
          class="iconfont {{ selectAll == -2 ? 'icon-gouxuan' : 'icon-wxz' }}"> 全选</view>
    <view wx:if="{{ !del }}" class="s-r">
      <button catchtap="del" class="f28 cfff del">删除</button>
      <button catchtap="submit" class="f28 cfff">下架</button>
      <button catchtap="submit" class="f28 cfff">上架</button>
    </view>
  </view>
</form>
<!--错误弹窗-->
<import src="/template/template"></import>
<template wx:if="{{ toast.show }}" is="showToast" data="{{ ...toast }}"></template>
