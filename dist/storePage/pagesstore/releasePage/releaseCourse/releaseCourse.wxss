.courseType {
  padding: 15rpx 20rpx;
  border-radius: 40rpx;
  display: inline-block;
  transition: all .5s;
}
.courseType:nth-last-child(1) {
  margin-right: 0;
}
.courseType.active {
  font-weight: 700;
  background: rgba(255, 59, 91, 0.9);
  color: #fff;
}
.hasborder {
  border: 2rpx solid #979797;
}
.hasborder.active {
  border-color: #ff3b5b;
}
.border-out {
  border: 2rpx solid #979797;
}
.add-video .a-v-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
}
.add-video .video-area {
  width: 100%;
}
.progress {
  height: 4rpx;
  width: 100%;
  background-color: #fff;
}
.progress .progress-i {
  height: 100%;
  background-color: green;
}
.i-title {
  padding: 0rpx 30rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.img-area {
  width: 100%;
}
.show-time {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.show-time-choose {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.bottom-btn {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  width: 100%;
  padding: 0 30rpx;
}
.bottom-btn view {
  width: 100%;
  background: rgba(255, 59, 91, 0.9);
  border-radius: 50rpx;
  box-shadow: 0rpx 10rpx 10rpx 6rpx rgba(255, 228, 232, 0.8);
}
.up-img {
  display: flex;
  flex-wrap: wrap;
}
.up-img image {
  width: 180rpx;
  height: 180rpx;
  margin: 10rpx;
}
.up-img .up-btn {
  display: inline-block;
  margin: 10rpx;
  width: 180rpx;
  height: 180rpx;
  border: 2rpx dashed #bbb;
  position: relative;
}
.up-img .up-btn:before {
  font-size: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  color: #bbb;
  transform: translate(-50%, -50%);
}
.up-img .up-progress {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 180rpx;
  height: 180rpx;
}
.up-img .up-progress .tac {
  padding: 2rpx 6rpx;
  border-radius: 20rpx;
  background-color: #eee;
}
