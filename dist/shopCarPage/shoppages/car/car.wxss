.edit {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 28rpx 30rpx 30rpx;
}
.iconfont {
  font-size: 30rpx;
  margin: 30rpx;
  color: #979797;
}
.iconfont.icon-gouxuan {
  color: #ff5975;
}
.car-list {
  display: flex;
  align-items: center;
  padding-left: 0;
}
.car-list image {
  width: 154rpx;
  height: 154rpx;
}
.car-list .clr-b {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.submit {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  width: 100%;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}
.submit .cfff {
  padding: 20rpx 30rpx;
  border-radius: 60rpx;
  background-color: #ff5975;
  margin-left: 20rpx;
}
.submit .s-r {
  display: flex;
  align-items: center;
}
.submit .s-r text {
  word-break: keep-all;
}
.submit button {
  word-break: keep-all;
  background-color: #ff5975;
  border-radius: 88rpx;
  color: #fff;
  padding: 10rpx 30rpx !important;
}
.submit button.del {
  padding: 10rpx 48rpx !important;
}
.gmc-num {
  display: flex;
  align-items: center;
}
.gmcn-in {
  height: 60rpx;
  line-height: 60rpx;
  width: 80rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border: 1rpx solid #444;
  display: inline-block;
}
.gmcn-del,
.gmcn-add {
  background-color: #ff5975;
  width: 60rpx;
  height: 60rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  font-size: 50rpx;
  margin: 0 10rpx;
}
.no-goods {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  text-align: center;
  padding: 40rpx;
  font-size: 30rpx;
}
